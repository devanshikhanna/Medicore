@using System.Data
@{

    Layout = "~/Views/_layoutAdmin.cshtml";
    ViewBag.Title = "Detail";

    WebApplication9.Models.Distributor d = (WebApplication9.Models.Distributor)ViewBag.DistributorUpdate;
    //this is viewbag . as there can be only one model in a view we will use a viewbag.

    // DataTable dt = ViewBag.ServiceTypeDetail;//for dropdown
    // DataTable dt2 = ViewBag.ServiceProviderList;//for table

    // we can also use datatable
}

<!--First part i.e Form-->

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Distributor Detail <small>Create Distributor</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="/Admin/DistributorDetail" method="post" enctype="multipart/form-data">

                <!--
                  enctype="multipart/form-data" must be used when there is attribute for a file upload.
                 by default it is text/plain.

                  for info regarding the enctype visit :
                http://html.com/attributes/form-enctype/
                 and also see the answers on stackoverflow.

                 -->

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Distributor Name">
                        Name <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" value="@d.Name" name="Name" required="required" class="form-control col-md-7 col-xs-12">
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Distributor Name">
                        Mobile <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" value="@d.Mobile" name="Mobile" required="required" class="form-control col-md-7 col-xs-12">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Distributor Name">
                        Photo <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">

                        <input class="input-xlarge focused" type="file" name="Photo">
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Distributor Name">
                        Username <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" value="@d.Username" name="Username" required="required" class="form-control col-md-7 col-xs-12">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Distributor Name">
                        Password <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" value="Password" name="Password" required="required" class="form-control col-md-7 col-xs-12">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Distributor Name">
                        Address <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <textarea id="Address" required="required" class="form-control" name="Address" data-parsley-trigger="keyup" data-parsley-minlength="10" data-parsley-maxlength="100"></textarea>
                    </div>
                </div>
                <!--
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Ddistributor Name">
                        CreateDate <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" value="d.CreateDate" name="DepartmentID" required="required" class="form-control col-md-7 col-xs-12">
                    </div>
                </div>-->

                
 
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <!--<button type="submit" class="btn btn-primary">Cancel</button>-->
                        <button type="submit" class="btn btn-success">Create New Distributor</button>
                        <button type="submit" class="btn btn-primary">Reset</button>
                        
                    </div>
                </div>

                <!-- hidden value Passing ID-->
                <input type="hidden" name="DistributorID" value="@d.DistributorID" />

            </form>
        </div>
    </div>
</div>







