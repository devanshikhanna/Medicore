@using System.Data
@model DataTable
@{
    ViewBag.Title = "StaffList";
    WebApplication9.Models.Staff s = (WebApplication9.Models.Staff)ViewBag.StaffUpdate;

    Layout = "~/Views/_layoutAdmin.cshtml";
}

<!--List part (Table)-->
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Staff List <small>List of Staff</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>s
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            
                <table class="table table-striped responsive-utilities jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th>
                                <input type="checkbox" id="check-all" class="flat">
                            </th>
                            <th class="column-title">Staff ID</th>
                            <th class="column-title"> Name </th>
                            <th class="column-title">Email </th>
                            <th class="column-title">Mobile</th>
                            <th class="column-title">Address</th>
                            <th class="column-title">City </th>
                            <th class="column-title">Username </th>
                            <th class="column-title">Password</th>
                            <th class="column-title">Photo</th>
                          
                            <th class="column-title">Salary</th>
                            <th class="column-title">Status</th>
                            <th class="column-title no-link last">
                                <span class="nobr">Action</span>
                            </th>
                            <th class="bulk-actions" colspan="7">
                                <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Rows.Count; i++)
                        {
                            <tr class="even pointer">
                                <td class="a-center ">
                                    <input type="checkbox" class="flat" name="table_records">
                                </td>
                                <td class=" ">@Model.Rows[i]["StaffID"]</td>
                                <td class=" ">@Model.Rows[i]["Name"]</td>
                                <td style="white-space:nowrap; text-overflow:ellipsis; overflow:hidden; max-width:1px">@Model.Rows[i]["Email"]</td>
                                <td class=" ">@Model.Rows[i]["Mobile"]</td>
                                <td class=" ">@Model.Rows[i]["Address"]</td>
                                <td class=" ">@Model.Rows[i]["City"]</td>
                                <td style="white-space:nowrap; text-overflow:ellipsis; overflow:hidden; max-width:1px" class=" ">@Model.Rows[i]["Username"]</td>
                                <td class=" ">@Model.Rows[i]["Password"]</td>
                                <td><img style="width:100px" src='@Model.Rows[i]["Photo"]' /></td>
                               
                                <td class=" ">@Model.Rows[i]["Salary"]</td>
                                <td class=" ">@Model.Rows[i]["Status"]</td>
                                <td class=" last">
                                    <a href="~/Admin/StaffDetail/@Model.Rows[i]["StaffID"]">View/</a>
                                    <a href="~/Admin/StaffDelete/@Model.Rows[i]["StaffID"]">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <!-- hidden value Passing ID-->
                <input type="hidden" name="StaffID" value="@s.StaffID" />
            </div>
    </div>
</div>